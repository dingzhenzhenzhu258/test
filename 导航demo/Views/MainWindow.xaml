<Window
    x:Class="导航demo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:导航demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:导航demo.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <!--  当 ContentControl 的 Content 属性绑定到某个 ViewModel 时，WPF 会自动选择对应的 DataTemplate 来渲染 UI  -->
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <local:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel2}">
                <local:HomeView2 />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:LayoutViewModel}">
                <local:Layout />
            </DataTemplate>
        </Grid.Resources>

        <!--
            根据 CurrentViewModel 的类型，自动选择对应的 DataTemplate，显示不同的页面。
            这是整个应用的 主导航区域
        -->
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
